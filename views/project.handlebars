<div class="card">
  <div class="card-body">
      <h2>{{name}}</h2>
      <p>{{description}}</p>
      <p>Created by {{user.name}} on {{format_date date_created}}</p>
  </div>
</div>


{{#if comments.length}}
<h3>Current Comments:</h3>
{{#each comments as |comment|}}
<div class="card">
  <div class="card-body">
    <h6>{{comment.comment_text}}</h6>
    <p>Created by {{user.name}} on {{format_date date_created}}</p>
  </div>
</div>
{{/each}}
{{/if}}

