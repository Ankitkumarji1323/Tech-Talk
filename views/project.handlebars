<div class="text-center">
  <h2>{{name}}</h2>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>

</div>

 {{#if comments.length}}
    <div>
      <h3>Current Comments:</h3>
      {{#each comments as |comment|}}
        <div>
          <h2>
            <p>Created by {{user.name}} on {{format_date date_created}}</p>
          </h2>
          <div>
            <p>{{comment.comment_text}}</p>
          </div>
      {{/each}}
    </div>
  {{/if}}
</div>


 {{#if logged_in}}
  <div> 
    <div>
      <h3>Would you like to add a comment?</h3>
        <form class="new-comment-form form">
          <div class="form-group">
            <label for="comment">Comment</label>
            <textarea class="form-input" id="comment_text" name="comment"></textarea>
            <input type='hidden' value={{id}} id="projectId">
          </div>

          <div class="form-group">
            <button type="submit" class="btn btn-primary margin10">Add your Comment</button>
          </div>
        </form>
    </div>
  </div>
      
  {{else}}
  <a class="btn btn-primary" href="/login">Login to Leave a Comment</a>
  {{/if}}
<script src="../js/project.js"></script>
