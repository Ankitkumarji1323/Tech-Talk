 {{#if logged_in}}
  <div> 
    <div>
      <h3>Would you like to add a comment?</h3>
        <form class="new-comment-form form">
          <div class="form-group">
            <label for="comment">Comment</label>
            <textarea class="form-input" id="comment_text" name="comment"></textarea>
            <input type='hidden' value={{id}} id="projectId">
          </div>

          <div class="form-group">
            <button type="submit" class="btn btn-primary margin10" style = "background-color: #6ca848;">Add your Comment</button>
          </div>
        </form>
    </div>
  </div>
      
  {{else}}
  <a class="btn btn-primary" href="/login" style = "background-color: #6ca848;">Login to Leave a Comment</a>
  {{/if}}
<script src="../js/project.js"></script>
