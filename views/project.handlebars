<div class="text-center">
  <h2>{{name}}</h2>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>

</div>

 {{#if comments.length}}
    <div>
      <h3>Current Comments:</h3>
      {{#each comments as |comment|}}
        <div>
          <h2>
            <p>Created by {{user.name}} on {{format_date date_created}}</p>
          </h2>
          <div>
            <p>{{comment.description}}</p>
          </div>
      {{/each}}
    </div>
  {{/if}}

<script src="../js/project.js"></script>
</div>
